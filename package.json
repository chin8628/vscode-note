{
    "name": "vscode-note",
    "displayName": "vscode-note",
    "description": "A simple note extension.",
    "version": "0.8.7",
    "icon": "icon.png",
    "publisher": "shinhwagk",
    "preview": true,
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shinhwagk/vscode-note"
    },
    "categories": [
        "Other"
    ],
    "license": "MIT",
    "activationEvents": [
        "onView:domainExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vsnote-explorer",
                    "title": "VSNote",
                    "icon": "images/note.svg"
                }
            ]
        },
        "views": {
            "vsnote-explorer": [
                {
                    "id": "domainExplorer",
                    "name": "domain"
                },
                {
                    "id": "editExplorer",
                    "name": "note edit",
                    "when": "vscode-note.note.edit"
                },
                {
                    "id": "filesExplorer",
                    "name": "files",
                    "when": "vscode-note.note.files"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "vscode-note.edit-explorer.note.col.add",
                    "group": "navigation",
                    "when": "view == editExplorer"
                },
                {
                    "command": "vscode-note.edit-explorer.close",
                    "group": "navigation",
                    "when": "view == editExplorer"
                },
                {
                    "command": "vscode-note.files-explorer.close",
                    "group": "navigation",
                    "when": "view == filesExplorer"
                },
                {
                    "command": "vscode-note.domain.add",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "vscode-note.domain.refresh",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "vscode-note.note.edit.full",
                    "when": "view == editExplorer",
                    "group": "1_orderBy"
                },
                {
                    "command": "vscode-note.note.delete",
                    "when": "view == editExplorer",
                    "group": "2_orderBy"
                },
                {
                    "command": "vscode-note.files-explorer.openTerminal",
                    "when": "view == filesExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "vscode-note.domain.add",
                    "when": "view == domainExplorer",
                    "group": "1_domain"
                },
                {
                    "command": "vscode-note.domain.rename",
                    "when": "view == domainExplorer",
                    "group": "1_domain"
                },
                {
                    "command": "vscode-note.note.category.add",
                    "when": "view == domainExplorer && viewItem == noCategory",
                    "group": "2_category"
                },
                {
                    "command": "vscode-note.edit-explorer.note.col.remove",
                    "when": "view == editExplorer && viewItem == editNoteNode",
                    "group": "inline"
                }
            ]
        },
        "configuration": [
            {
                "type": "object",
                "title": "VScode Note",
                "properties": {
                    "vscode-note.dbpath": {
                        "type": "string",
                        "default": "~/.vscode-note",
                        "description": "note data location"
                    },
                    "vscode-note.repository": {
                        "type": "string",
                        "default": "",
                        "description": "note data repository"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "vscode-note.note.add",
                "title": "New Note"
            },
            {
                "command": "vscode-note.note.delete",
                "title": "Trash"
            },
            {
                "command": "vscode-note.domain.add",
                "title": "New Domain",
                "icon": {
                    "light": "images/light/add.svg",
                    "dark": "images/dark/add.svg"
                }
            },
            {
                "command": "vscode-note.note.category.add",
                "title": "New Category",
                "icon": {
                    "light": "images/light/add.svg",
                    "dark": "images/dark/add.svg"
                }
            },
            {
                "command": "vscode-note.domain.rename",
                "title": "Rname Domain"
            },
            {
                "command": "vscode-note.domain.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            },
            {
                "command": "vscode-note.edit-explorer.close",
                "title": "Close",
                "icon": {
                    "light": "images/light/close.svg",
                    "dark": "images/dark/close.svg"
                }
            },
            {
                "command": "vscode-note.files-explorer.close",
                "title": "Close",
                "icon": {
                    "light": "images/light/close.svg",
                    "dark": "images/dark/close.svg"
                }
            },
            {
                "command": "vscode-note.edit-explorer.note.col.add",
                "title": "Add Col",
                "icon": {
                    "light": "images/light/add.svg",
                    "dark": "images/dark/add.svg"
                }
            },
            {
                "command": "vscode-note.edit-explorer.note.col.remove",
                "title": "Del Col",
                "icon": {
                    "light": "images/light/close.svg",
                    "dark": "images/dark/close.svg"
                }
            },
            {
                "command": "vscode-note.note.edit.full",
                "title": "Edit Full"
            },
            {
                "command": "vscode-note.files-explorer.openTerminal",
                "title": "open terminal"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn lint:all && yarn compile",
        "compile": "webpack --mode production --config webpack.config.ts",
        "watch": "webpack --mode development --config webpack.config.ts --watch",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest",
        "lint:tslint": "tslint --project tsconfig.json --fix",
        "lint:prettier": "prettier --write **/*.ts",
        "lint:all": "yarn lint:tslint && yarn lint:prettier"
    },
    "devDependencies": {
        "@babel/core": "^7.4.0",
        "@babel/preset-react": "^7.0.0",
        "@types/fs-extra": "^5.0.5",
        "@types/jest": "^24.0.11",
        "@types/js-yaml": "^3.12.0",
        "@types/node": "^11.11.5",
        "@types/object-path": "^0.11.0",
        "@types/react": "^16.8.8",
        "@types/react-dom": "^16.8.3",
        "@types/rimraf": "^2.0.2",
        "@types/untildify": "^3.0.0",
        "@types/webpack": "^4.4.26",
        "babel-loader": "^8.0.5",
        "css-loader": "^2.1.1",
        "jest": "^24.5.0",
        "node-sass": "^4.11.0",
        "prettier": "^1.16.4",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "ts-jest": "^24.0.0",
        "ts-loader": "^5.3.3",
        "ts-node": "^8.0.3",
        "tslint": "^5.14.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.3.4000",
        "typescript-tslint-plugin": "^0.3.1",
        "vscode": "^1.1.33",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.17",
        "@fortawesome/free-solid-svg-icons": "^5.8.1",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "bootstrap": "^4.3.1",
        "fs-extra": "^7.0.1",
        "js-yaml": "^3.13.0",
        "object-path": "^0.11.4",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "rimraf": "^2.6.3",
        "untildify": "^3.0.3"
    }
}