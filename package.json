{
    "name": "vscode-note",
    "displayName": "vscode-note",
    "description": "A simple note-taking extension.",
    "version": "0.9.41",
    "icon": "icon.png",
    "publisher": "shinhwagk",
    "preview": true,
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shinhwagk/vscode-note"
    },
    "categories": [
        "Snippets",
        "SCM Providers",
        "Other"
    ],
    "keywords": [
        "note",
        "vscode"
    ],
    "license": "MIT",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vsnote-explorer",
                    "title": "vscode-note",
                    "icon": "images/note.svg"
                }
            ]
        },
        "views": {
            "vsnote-explorer": [
                {
                    "id": "domainExplorer",
                    "name": "domain"
                },
                {
                    "id": "filesExplorer",
                    "name": "files",
                    "when": "vscode-note.files-explorer"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "vscode-note.domain.create",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "vscode-note.domain.refresh",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "vscode-note.files.openTerminal",
                    "when": "view == filesExplorer",
                    "group": "navigation@3"
                },
                {
                    "command": "vscode-note.files.edit.open",
                    "when": "view == filesExplorer",
                    "group": "navigation@3"
                },
                {
                    "command": "vscode-note.files.close",
                    "group": "navigation@1",
                    "when": "view == filesExplorer"
                },
                {
                    "command": "vscode-note.files.refresh",
                    "group": "navigation@2",
                    "when": "view == filesExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "vscode-note.domain.create",
                    "when": "view == domainExplorer",
                    "group": "1_domain"
                },
                {
                    "command": "vscode-note.domain.rename",
                    "when": "view == domainExplorer",
                    "group": "2_domain"
                },
                {
                    "command": "vscode-note.domain.move",
                    "when": "view == domainExplorer",
                    "group": "2_domain"
                },
                {
                    "command": "vscode-note.notes.create",
                    "when": "view == domainExplorer && viewItem == emptyNotes",
                    "group": "0_domain"
                },
                {
                    "command": "vscode-note.files.file.url.raw",
                    "when": "view == filesExplorer && viewItem == file"
                },
                {
                    "command": "vscode-note.files.file.url",
                    "when": "view == filesExplorer && viewItem == file"
                }
            ]
        },
        "configuration": [
            {
                "type": "object",
                "title": "vscode-note",
                "properties": {
                    "vscode-note.dbpath": {
                        "type": "string",
                        "default": "~/vscode-note",
                        "description": "note data location"
                    },
                    "vscode-note.ga": {
                        "type": "boolean",
                        "default": "true",
                        "description": "open ga collect"
                    },
                    "vscode-note.github": {
                        "type": "string",
                        "description": "github remote"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "vscode-note.domain.create",
                "title": "New Domain",
                "icon": {
                    "light": "images/light/add.svg",
                    "dark": "images/dark/add.svg"
                }
            },
            {
                "command": "vscode-note.domain.move",
                "title": "Move Domain"
            },
            {
                "command": "vscode-note.domain.rename",
                "title": "Rname Domain"
            },
            {
                "command": "vscode-note.domain.refresh",
                "title": "Domain Refresh",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            },
            {
                "command": "vscode-note.files.close",
                "title": "Close",
                "icon": {
                    "light": "images/light/close.svg",
                    "dark": "images/dark/close.svg"
                }
            },
            {
                "command": "vscode-note.files.openTerminal",
                "title": "open terminal",
                "icon": {
                    "light": "images/light/terminal.svg",
                    "dark": "images/dark/terminal.svg"
                }
            },
            {
                "command": "vscode-note.notes.create",
                "title": "Create Notes"
            },
            {
                "command": "vscode-note.files.edit.open",
                "title": "open edit window",
                "icon": {
                    "light": "images/light/edit.svg",
                    "dark": "images/dark/edit.svg"
                }
            },
            {
                "command": "vscode-note.files.refresh",
                "title": "refresh",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            },
            {
                "command": "vscode-note.files.file.url.raw",
                "title": "github raw url"
            },
            {
                "command": "vscode-note.files.file.url",
                "title": "github url"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn compile",
        "compile": "webpack --mode production --config webpack.config.ts",
        "watch": "webpack --mode development --config webpack.config.ts --watch",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest",
        "lint:tslint": "tslint --project tsconfig.json --fix",
        "lint:prettier": "prettier --write **/*.ts",
        "lint:all": "yarn lint:tslint && yarn lint:prettier"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.13.7",
        "@types/object-path": "^0.11.0",
        "@types/react": "^16.8.14",
        "@types/react-dom": "^16.8.4",
        "@types/rimraf": "^2.0.2",
        "@types/webpack": "^4.4.27",
        "babel-loader": "^8.0.5",
        "copy-webpack-plugin": "^5.0.2",
        "css-loader": "^2.1.1",
        "jest": "^24.7.1",
        "node-sass": "^4.11.0",
        "prettier": "^1.17.0",
        "rimraf": "^2.6.3",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "ts-jest": "^24.0.2",
        "ts-loader": "^5.4.3",
        "ts-node": "^8.1.0",
        "tslint": "^5.16.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.4.4",
        "typescript-tslint-plugin": "^0.3.1",
        "vscode": "^1.1.33",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.1"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.17",
        "@fortawesome/free-solid-svg-icons": "^5.8.1",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "bootstrap": "^4.3.1",
        "object-path": "^0.11.4",
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    }
}
